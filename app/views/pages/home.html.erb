  <%= form.label :location, "Location" %>
  <%= form.text_field :location %>
  <%= form.radio_button :category, "Doctor" %>
  <%= form.label :doctor, "Doctor" %>
  <%= form.radio_button :category, "Dentist" %>
  <%= form.label :dentist, "Dentist" %>
  <%= form.radio_button :category, "Veterinaire" %>
  <%= form.label :veterinaire, "Veterinaire" %>
  <%= form.radio_button :category, "Pharmacy" %>
  <%= form.label :pharmacy, "Pharmacy" %>
    <%= form.submit "Search" %>
<% end %>
