<div class="container text-center">
  <h1 id="welcome-user"> Welcome, <%= @user.username %> </h1>
  <p id="manage">Manage your Businesses</p>
</div>
<div class="user-business-grid">
  <% @business.each do |business| %>
    <div class="user-businesses-cards">
      <div class="user-business-cards-info">
        <h5><%= business.name %></h5>
        <p><%= business.address.split(', ').first %> </p>
        <p><%= business.address.split(', ').last %></p>
      </div>
      <div class="user-businesses-cards-logo">
        <%= image_tag business.category.image, class: "users-business-image" %>
      </div>
    </div>
  <% end %>
</div>

