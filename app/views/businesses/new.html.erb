<header>
  <%= link_to my_businesses_path(@users) do %>
  <i class="fas fa-arrow-alt-circle-left" , id="back-arrow"></i>
  <% end %>
  <h1 id="visitors-title">Emergency Wiki</h1>
  <%= image_tag "emergency-wiki-logo.png", id:"logo" %>
</header>


<div class="new-business-container">
  <h2>Enter your Data</h2>

   <div class="slide-button flexbox">
    <label class="toggle-control">
      <input type="checkbox" checked="checked">
      <span class="control"></span>
    </label>
  </div>

  <div class="add-business-form">
    <%= simple_form_for @business do |f| %>
        <h3>You are a :</h3>
      <%= f.association :category, as: :radio_buttons %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :comment %>
    <div class="flexbox" id="btn-green">
      <%= f.submit class: "button-medium-green" %>
    </div>
    <% end %>
  </div>


</div>

